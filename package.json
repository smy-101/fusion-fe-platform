{
  "name": "fusion-fe-platform",
  "version": "1.0.0",
  "description": "Enterprise frontend platform with React, TypeScript, and modern tooling",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:storybook": "pnpm --filter @fusion/ui storybook",
    "build": "pnpm --filter web build",
    "build:storybook": "pnpm --filter @fusion/ui build-storybook",
    "build:packages": "pnpm -r --filter !@fusion/web build",
    "build:all": "pnpm -r build",
    "preview": "pnpm --filter web preview",
    "preview:storybook": "npx http-server packages/ui/storybook-static -p 6007",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "http-server": "^14.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}